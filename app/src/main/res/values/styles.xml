<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>


    <style name="LabelSpinner"></style>

    <style name="LabelSpinner.Frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
    </style>

    <style name="LabelSpinner.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:background">@drawable/border_spinner</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LabelSpinner.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spn_label_spinner_height</item>
    </style>

    <style name="LabelSpinner.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/spinner_label_txt_size</item>
    </style>

    <style name="spinnerDropDownStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>
</resources>
